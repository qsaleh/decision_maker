<!-- NAV starts here -->
    <nav>
      <img src="https://cdn2.iconfinder.com/data/icons/law-and-crime-2/512/drawing16-512.png " height="55" width="55" style="padding-left: 0.35em; padding-bottom: 0.5em;"><span id="nav-align">verdict</span>

      <form id="user-login" action="/api/users/login" method="post">
        <input type="email" placeholder="email" name="email">
